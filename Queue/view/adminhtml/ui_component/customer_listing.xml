<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="mass_email_promotion_customer">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure to send an email to the selected customers who registered via Email?</message>
                        <title translate="true">Email to selected Customers</title>
                    </confirm>
                    <url path="massemailpromotioncustomers/email/massSend"/>
                    <type>mass_email_promotion_customer</type>
                    <label translate="true">Email to selected Customers</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
</listing>
